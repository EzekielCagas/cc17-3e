<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MColl">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men Collection"
                android:textSize="30sp"
                android:fontFamily="@font/frank"
                android:layout_marginLeft="110dp"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="7dp"/>

        <LinearLayout
            android:id="@+id/category_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tuxedo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuxedo"
                android:textSize="25sp"
                android:fontFamily="@font/frank"
                android:layout_marginLeft="160dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:id="@+id/tuxContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/t1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d1"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/t2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d2"
                android:layout_marginLeft="7dp"/>
            <ImageView
                android:id="@+id/t3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/b1"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:id="@+id/tuxContainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/t4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/b2"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/t5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d1"
                android:layout_marginLeft="7dp"/>
            <ImageView
                android:id="@+id/t6"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d2"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:id="@+id/tuxContainer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/t7"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/b1"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/t8"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d2"
                android:layout_marginLeft="7dp"/>
            <ImageView
                android:id="@+id/t9"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d1"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:id="@+id/category_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blazer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blazers"
                android:textSize="25sp"
                android:fontFamily="@font/frank"
                android:layout_marginLeft="160dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:id="@+id/blazer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/b1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/b4"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/b2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d4"
                android:layout_marginLeft="7dp"/>
            <ImageView
                android:id="@+id/b3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d5"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:id="@+id/blazer_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/b4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d3"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/b5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/b4"
                android:layout_marginLeft="7dp"/>
            <ImageView
                android:id="@+id/b6"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d5"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:id="@+id/blazer_container3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/b7"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/b4"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/b8"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d4"
                android:layout_marginLeft="7dp"/>
            <ImageView
                android:id="@+id/b9"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/d5"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include
            layout="@layout/nav_menu"/>
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>