<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KColl">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kids Collection"
                android:textSize="30sp"
                android:fontFamily="@font/frank"
                android:layout_marginLeft="110dp"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="7dp"/>

        <LinearLayout
            android:id="@+id/category_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boys Selection"
                android:textSize="25dp"
                android:fontFamily="@font/frank"
                android:layout_marginLeft="110dp"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <LinearLayout
            android:id="@+id/boys_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/k1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k1"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/k2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/k2" />
            <ImageView
                android:id="@+id/k3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k3"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:id="@+id/boys_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/k4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k4"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/k5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/k1" />
            <ImageView
                android:id="@+id/k6"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k2"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:id="@+id/boys_container3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/k7"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k3"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/k8"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/k4" />
            <ImageView
                android:id="@+id/k9"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k1"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:id="@+id/title_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Girls Selection"
                android:textSize="25dp"
                android:fontFamily="@font/frank"
                android:layout_marginLeft="110dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:id="@+id/girls_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/g1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k5"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/g2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k6"
                android:layout_marginLeft="7dp"/>
            <ImageView
                android:id="@+id/g3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k7"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:id="@+id/girls_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/g4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k8"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/g5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k5"
                android:layout_marginLeft="7dp"/>
            <ImageView
                android:id="@+id/g6"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k6"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:id="@+id/girls_container3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/g7"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k7"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/g8"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k8"
                android:layout_marginLeft="7dp"/>
            <ImageView
                android:id="@+id/g9"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/k5"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include
            layout="@layout/nav_menu"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>