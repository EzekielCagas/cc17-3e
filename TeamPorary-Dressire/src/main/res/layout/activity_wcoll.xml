<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WColl">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/toolbar"/>

            <LinearLayout
                android:id="@+id/title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Women Collection"
                    android:textSize="30sp"
                    android:fontFamily="@font/frank"
                    android:layout_marginLeft="90dp"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="7dp"/>

            <LinearLayout
                android:id="@+id/night_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nightgowns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Night Gowns"
                    android:textSize="25sp"
                    android:fontFamily="@font/frank"
                    android:layout_marginLeft="120dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:id="@+id/dressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/n1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c1"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/n2"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c2"
                    android:layout_marginLeft="7dp"/>
                <ImageView
                    android:id="@+id/n3"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c3"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:id="@+id/dressContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/n4"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c1"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/n5"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c2"
                    android:layout_marginLeft="7dp"/>
                <ImageView
                    android:id="@+id/n6"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c3"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:id="@+id/dressContainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/n7"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c1"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/n8"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c2"
                    android:layout_marginLeft="7dp"/>
                <ImageView
                    android:id="@+id/n9"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c3"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:id="@+id/prom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/promgowns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prom Gowns"
                    android:textSize="25sp"
                    android:fontFamily="@font/frank"
                    android:layout_marginLeft="120dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:id="@+id/dressContainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c5"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/p2"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c6"
                    android:layout_marginLeft="7dp"/>
                <ImageView
                    android:id="@+id/p3"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c7"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:id="@+id/dressContainer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p4"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c5"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/p5"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c6"
                    android:layout_marginLeft="7dp"/>
                <ImageView
                    android:id="@+id/p6"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c7"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:id="@+id/dressContainer6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p7"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c5"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/p8"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c6"
                    android:layout_marginLeft="7dp"/>
                <ImageView
                    android:id="@+id/p9"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/c7"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

</ScrollView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include
            layout="@layout/nav_menu"/>
    </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>