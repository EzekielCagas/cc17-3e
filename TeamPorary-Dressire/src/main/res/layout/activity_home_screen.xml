<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/categoriesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/list" />

    <ImageButton
        android:id="@+id/accountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/account" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="536dp"
        android:layout_height="714dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-262dp"
        android:layout_marginBottom="-63dp"
        android:src="@drawable/bg_dress" />

    <TextView
        android:id="@+id/dres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="203dp"
        android:layout_marginBottom="532dp"
        android:text="DRES"
        android:textSize="75dp"
        android:fontFamily="@font/fashion"/>

    <TextView
        android:id="@+id/sire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="532dp"
        android:fontFamily="@font/fashion"
        android:text="SIRE"
        android:textColor="@color/white"
        android:textSize="75dp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="466dp"
        android:text="Browsing gowns has never been easier. Giving you the dress that you dessire aright at your screen"
        android:textSize="15dp"
        android:fontFamily="@font/frank"/>

    <Button
        android:id="@+id/browse"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="234dp"
        android:layout_marginBottom="410dp"
        android:text="Browse"
        android:fontFamily="@font/frank"
        android:textSize="25dp"/>


</RelativeLayout>
